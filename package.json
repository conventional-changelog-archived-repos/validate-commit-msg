{
  "name": "validate-commit-msg",
  "description": "Script to validate a commit message follows the conventional changelog standard",
  "main": "dist/index.js",
  "version": "0.0.0-development",
  "scripts": {
    "build:watch": "babel -w ./index.js -d dist",
    "prebuild": "rimraf dist",
    "build": "babel --out-dir dist ./index.js",
    "commit": "git-cz",
    "check-coverage": "nyc check-coverage --statements 100 --branches 90 --functions 100 --lines 100 --compilers js:babel-register",
    "report-coverage": "cat ./coverage/lcov.info | codecov",
    "test:watch": "npm t -- -w",
    "test": "mocha index.test.js --compilers js:babel-register",
    "cover": "nyc --reporter=lcov npm t",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "bin": {
    "validate-commit-msg": "./dist/index.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/kentcdodds/validate-commit-msg.git"
  },
  "keywords": [
    "githook",
    "commit",
    "message",
    "git",
    "conventional",
    "changelog"
  ],
  "author": "Kent C. Dodds <kent@doddsfamily.us> (http://kentcdodds.com/)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/kentcdodds/validate-commit-msg/issues"
  },
  "homepage": "https://github.com/kentcdodds/validate-commit-msg#readme",
  "devDependencies": {
    "babel-cli": "^6.11.4",
    "babel-preset-es2015": "^6.9.0",
    "babel-preset-stage-2": "^6.11.0",
    "babel-register": "^6.11.6",
    "chai": "3.4.1",
    "codecov.io": "0.1.6",
    "commitizen": "2.5.0",
    "cz-conventional-changelog": "1.1.5",
    "ghooks": "1.0.3",
    "mocha": "2.3.4",
    "nyc": "^7.1.0",
    "rimraf": "^2.5.4",
    "semantic-release": "4.3.5",
    "sinon": "1.17.2"
  },
  "config": {
    "ghooks": {
      "commit-msg": "./dist/index.js && npm run cover && npm run check-coverage"
    },
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    },
    "validate-commit-msg": {
      "helpMessage": "\nPlease fix your commit message (and consider using http://npm.im/commitizen)\n",
      "types": [
        "feat",
        "fix",
        "docs",
        "style",
        "refactor",
        "perf",
        "test",
        "chore",
        "revert",
        "custom"
      ],
      "warnOnFail": false
    }
  },
  "dependencies": {
    "findup": "0.1.5",
    "semver-regex": "1.0.0"
  }
}
